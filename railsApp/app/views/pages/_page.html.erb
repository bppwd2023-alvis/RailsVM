<div id="<%= dom_id page %>">
  <p>
    <strong>Title:</strong>
    <%= page.title %>
  </p>

  <p>
    <strong>Section:</strong>
    <%= page.section_id %>
  </p>

  <p>
    <strong>Position:</strong>
    <%= page.position %>
  </p>

  <p>
    <strong>Page type:</strong>
    <%= page.page_type %>
  </p>

  <p>
    <strong>Destination:</strong>
    <%= link_to page.title, page.destination, :target => "_blank" %>
  </p>

  <p>
    <strong>Visible:</strong>
    <%= page.visible %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= page.content %>
  </p>

</div>
